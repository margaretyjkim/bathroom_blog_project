<%= form_for :article, url: articles_path do |f| %>

	<% if @article.errors.any? %>
		<div id="error_explanation">
			<h2>
				<%= pluralize(@article.errors.count, "error") %>
				prohibited
				this article from being saved:
			</h2>
			<ul>
				<% @article.errors.full_messages.each do |msg| %>
					<li><%= msg %></li>
				<% end %>
			</ul>
		</div>
	<% end %>

	<p>
	<%= f.label :title %><br>
	<%= f.text_field :title, :placeholder => "Headline of your blurb" %>
	</p>

	<p>
	<%= f.label :text %><br>
	<%= f.text_field :text, :placeholder => "Elaborate your thoughts" %>
	</p>

	<p>
	<%= f.submit %>
	</p>

<% end %>

<%= link_to 'Back to the Bathroom Stall', articles_path %>

